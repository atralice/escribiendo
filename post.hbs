{{!< defaultPost}}

{{#post}}
<div class="post">
  <h1 class="post-title">{{{title}}}</h1>
  <span class="post-date">{{date format="YYYY-MM-DD"}}</span>
  {{content}}
	<div id="disqus_thread"></div>
		<script type="text/javascript">
	    /* * * CONFIGURATION VARIABLES * * */
	    var disqus_shortname = 'escribiendocomentarios';
	    
